<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>Race:</strong>
  <%= @pet.race %>
</p>

<p>
  <strong>Birthdate:</strong>
  <%= @pet.birthdate %>
</p>

<table>
  <thead>
    <tr>
      <th>Weigth</th>
      <th>Height</th>
    </tr>
  </thead>

  <tbody>
      <% @pet.pet_histories.each do |history| %>
        <tr>
        <td><%= history.weight %></td>
        <td><%= history.heigth %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>Average weight</th>
      <th>Average height</th>
      <th>Max weight</th>
      <th>Max height</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @pet.avg_weight %></td>
      <td><%= @pet.avg_height %></td>
      <td><%= @pet.max_weight %></td>
      <td><%= @pet.max_height%></td>
    </tr>
  </tbody>
</table>

<%= link_to 'Edit', edit_pet_path(@pet) %> |
<%= link_to 'Back', pets_path %>
